<section class="register-index">
  <header class="page-header">
    <h1>Signup!</h1>
    </header>


   


    <%= form_for :user, url: '/users' do |f| %>
    
      <% if @user.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <div class="col-md-6">
        <label for="inputName4" class="col-sm-3 col-form-label">Name: </label>
        <%= f.text_field :name, :tabindex => 1,required: true %>
      </div>
      <div class="col-md-6">
        <label for="inputEmail4" class="col-sm-3 col-form-label">Email: </label>
        <%= f.email_field :email, :tabindex => 2,required: true %>
      </div>
      <div class="col-md-6">
        <label for="inputPassword4" class="col-sm-3 col-form-label">Password: </label>
        <%= f.password_field :password, :tabindex => 3, required: true %>
      </div>
      
      <div class="col-md-6">
        <label for="inputPasswordConfirm4" class="col-sm-3 col-form-label">Password Confirmation: </label>
        <%= f.password_field :password_confirmation, :tabindex => 4, required: true %>
      </div>
      <div class="col-12">
        <%= f.submit "Submit", class: 'btn btn-lg btn-primary', :tabindex => 5 %>
      </div>
  
    <% end %> 



</section>      